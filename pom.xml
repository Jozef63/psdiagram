<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <groupId>cz.miroslavbartyzal</groupId>
    <artifactId>psdiagram</artifactId>
    <version>1.1</version>
    <packaging>jar</packaging>
    <name>PS Diagram</name>
    <url>http://psdiagram.cz</url>

    <developers>
        <developer>
            <name>Miroslav Bartyzal</name>
            <email>miroslavbartyzal@gmail.com</email>
        </developer>
    </developers>

    <properties>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <freehep.version>2.2.1</freehep.version>
        <psdiagram.web.url>http://localhost:8080</psdiagram.web.url>

        <build.profile>development</build.profile>
        <!--+ kdyz davam run v developmentu tak nastavuji build.profile=development-run, abych si nezvykl odklikavat upozorneni-->
    </properties>

    <dependencies>
        <dependency>
            <groupId>junit</groupId>
            <artifactId>junit</artifactId>
            <version>4.11</version>
            <scope>test</scope>
        </dependency>

        <dependency>
            <groupId>org.eclipse.persistence</groupId>
            <artifactId>org.eclipse.persistence.moxy</artifactId>
            <version>2.5.0</version>
        </dependency>

        <dependency>
            <groupId>org.freehep</groupId>
            <artifactId>freehep-graphics2d</artifactId>
            <version>${freehep.version}</version>
        </dependency>
        <dependency>
            <groupId>org.freehep</groupId>
            <artifactId>freehep-graphicsio-pdf</artifactId>
            <version>${freehep.version}</version>
        </dependency>
    </dependencies>

    <scm>
        <connection>scm:svn:http://127.0.0.1/dummy</connection>
        <developerConnection>scm:svn:https://127.0.0.1/dummy</developerConnection>
        <tag>HEAD</tag>
        <url>http://127.0.0.1/dummy</url>
    </scm>

    <profiles>
        <profile>
            <id>deployment</id>
            <properties>
                <psdiagram.web.url>http://www.psdiagram.cz</psdiagram.web.url>
                <build.profile>deployment</build.profile>
            </properties>
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-antrun-plugin</artifactId>
                        <version>1.7</version>
                        <executions>
                            <execution>
                                <phase>package</phase>
                                <configuration>
                                    <target name="delete-signature">
                                        <jar destfile="${project.build.directory}/${psdiagramfinalname}" filesetmanifest="merge">
                                            <zipfileset src="${project.build.directory}/${project.build.finalName}-obfuscated-with_dependencies.jar" excludes="META-INF/*.DSA,META-INF/*.RSA,META-INF/*.SF" />
                                        </jar>
                                    </target>
                                </configuration>
                                <goals>
                                    <goal>run</goal>
                                </goals>
                            </execution>
                            <execution>
                                <id>prepare-for-deploy</id>
                                <phase>install</phase>
                                <configuration>
                                    <target name="prepare-for-deploy">
                                        <mkdir dir="${project.build.directory}/zip/PS Diagram"/>
                                        <copy file="${project.build.directory}/${psdiagramfinalname}" todir="${project.build.directory}/zip/PS Diagram"/>
                                        <copy file="c:/Skola/JCU-PF-ITV/Bakalarka/Bakalarka/K odevzdání/Uživatelská příručka/PS Diagram Uživatelská příručka.pdf" todir="${project.build.directory}/zip/PS Diagram"/>
                                        <copy todir="${project.build.directory}/zip/PS Diagram/examples">
                                            <fileset dir="${basedir}/src/main/resources/examples"/>
                                        </copy>
                                        <zip encoding="UTF-8" destfile="${project.build.directory}/PS_Diagram_${project.version}.zip"
                                             basedir="${project.build.directory}/zip"
                                             update="true"
                                        />
                                    </target>
                                </configuration>
                                <goals>
                                    <goal>run</goal>
                                </goals>
                            </execution>
                            <execution>
                                <id>prepare-updater</id>
                                <phase>install</phase>
                                <configuration>
                                    <target name="prepare-updater">
                                        <copy file="${settings.localRepository}/cz/miroslavbartyzal/psdiagram.updater/${project.version}/psdiagram.updater-${project.version}-with_dependencies.jar" tofile="${project.build.directory}/zip/updater.jar"/>
                                        <move todir="${project.build.directory}/zip/update">
                                            <fileset dir="${project.build.directory}/zip/PS Diagram"/>
                                        </move>
                                        <zip encoding="UTF-8" destfile="${project.build.directory}/update_${project.version}.zip"
                                             basedir="${project.build.directory}/zip"
                                             update="true"
                                        />
                                        <delete dir="${project.build.directory}/zip"/>
                                    </target>
                                </configuration>
                                <goals>
                                    <goal>run</goal>
                                </goals>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>
        <profile>
            <id>development-run</id>
            <properties>
                <build.profile>development-run</build.profile>
            </properties>
        </profile>
    </profiles>

    <build>

        <resources>
            <resource>
                <filtering>true</filtering>
                <directory>src/main/resources</directory>
                <includes>
                    <include>appliaction.properties</include>
                </includes>
            </resource>
            <resource>
                <filtering>false</filtering>
                <directory>src/main/resources</directory>
                <excludes>
                    <exclude>appliaction.properties</exclude>
                </excludes>
            </resource>
        </resources>
        <testResources>
            <testResource>
                <filtering>false</filtering>
                <directory>src/test/resources</directory>
            </testResource>
        </testResources>

        <plugins>
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>buildnumber-maven-plugin</artifactId>
                <version>1.2</version>
                <executions>
                    <execution>
                        <phase>validate</phase>
                        <goals>
                            <goal>create</goal>
                        </goals>
                    </execution>
                </executions>
                <configuration>
                    <doCheck>false</doCheck>
                    <doUpdate>false</doUpdate>
                    <revisionOnScmFailure>n/a</revisionOnScmFailure>
                    <format>{0,number} ({1,date,yyyy.MM.dd})</format>
                    <items>
                        <item>buildNumber</item>
                        <item>timestamp</item>
                    </items>
                </configuration>
            </plugin>

            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>properties-maven-plugin</artifactId>
                <version>1.0-alpha-2</version>
                <executions>
                    <execution>
                        <phase>initialize</phase>
                        <goals>
                            <goal>read-project-properties</goal>
                        </goals>
                        <configuration>
                            <files>
                                <file>${basedir}/src/main/resources/deploy.properties</file>
                            </files>
                        </configuration>
                    </execution>
                </executions>
            </plugin>

            <!--            <plugin>
                <artifactId>maven-resources-plugin</artifactId>
                <version>2.6</version>
                <executions>
                    <execution>
                        <id>copy-resources</id>
                        <phase>package</phase>
                        <goals>
                            <goal>copy-resources</goal>
                        </goals>
                        <configuration>
                            <outputDirectory>${env.OPENSHIFT_DATA_DIR}</outputDirectory>
                            <resources>
                                <resource>
                                    <directory>src/main/resources</directory>
                                    <filtering>true</filtering>
                                    <includes>
                                        <include>psdiagram_changes.xml</include>
                                    </includes>
                                </resource>
                            </resources>
                        </configuration>
                    </execution>
                </executions>
            </plugin>-->

            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <version>3.1</version>
                <configuration>
                    <source>1.7</source>
                    <target>1.7</target>
                </configuration>
            </plugin>

            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-jar-plugin</artifactId>
                <version>2.4</version>
                <configuration>
                    <archive>
                        <manifest>
                            <Main-Class>cz.miroslavbartyzal.psdiagram.app.diagram.Main</Main-Class>
                        </manifest>
                        <manifestEntries>
                            <Built-By>Miroslav Bartyzal</Built-By>
                            <Build-Number>${buildNumber}</Build-Number>
                            <SplashScreen-Image>img/splash.png</SplashScreen-Image>
                        </manifestEntries>
                    </archive>
                </configuration>
            </plugin>

            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-shade-plugin</artifactId>
                <version>2.1</version>
                <executions>
                    <execution>
                        <phase>package</phase>
                        <goals>
                            <goal>shade</goal>
                        </goals>
                        <configuration>
                            <shadedArtifactAttached>true</shadedArtifactAttached>
                            <shadedClassifierName>with_dependencies</shadedClassifierName>
                            <filters>
                                <filter>
                                    <artifact>*:*</artifact>
                                    <excludes>
                                        <exclude>META-INF/*.SF</exclude>
                                        <exclude>META-INF/*.DSA</exclude>
                                        <exclude>META-INF/*.RSA</exclude>
                                    </excludes>
                                </filter>
                            </filters>
                            <!--                            <relocations>
                                <relocation>
                                    <pattern>org</pattern>
                                    <shadedPattern>shaded.org</shadedPattern>
                                </relocation>
                            </relocations>-->
                            <transformers>
                                <transformer implementation="org.apache.maven.plugins.shade.resource.ManifestResourceTransformer">
                                    <Main-Class>cz.miroslavbartyzal.psdiagram.app.diagram.Main</Main-Class>
                                    <manifestEntries>
                                        <Built-By>Miroslav Bartyzal</Built-By>
                                        <Build-Number>${buildNumber}</Build-Number>
                                        <SplashScreen-Image>img/splash.png</SplashScreen-Image>
                                    </manifestEntries>
                                </transformer>
                            </transformers>
                        </configuration>
                    </execution>
                </executions>
            </plugin>

            <plugin>
                <groupId>com.github.wvengen</groupId>
                <artifactId>proguard-maven-plugin</artifactId>
                <version>2.0.6</version>
                <dependencies>
                    <dependency>
                        <groupId>net.sf.proguard</groupId>
                        <artifactId>proguard-base</artifactId>
                        <version>4.10</version>
                        <scope>runtime</scope>
                    </dependency>
                </dependencies>
                <executions>
                    <execution>
                        <phase>package</phase>
                        <goals>
                            <goal>proguard</goal>
                        </goals>
                    </execution>
                </executions>
                <configuration>
                    <archive>
                        <manifest>
                            <Main-Class>cz.miroslavbartyzal.psdiagram.app.diagram.Main</Main-Class>
                        </manifest>
                        <manifestEntries>
                            <Built-By>Miroslav Bartyzal</Built-By>
                            <Build-Number>${buildNumber}</Build-Number>
                            <SplashScreen-Image>img/splash.png</SplashScreen-Image>
                        </manifestEntries>
                    </archive>
                    <obfuscate>true</obfuscate>
                    <includeDependency>false</includeDependency>
                    <assembly>
                        <inclusions>
                            <inclusion>
                                <groupId>org.freehep</groupId>
                                <artifactId>freehep-graphics2d</artifactId>
                                <library>true</library>
                            </inclusion>
                            <inclusion>
                                <groupId>org.freehep</groupId>
                                <artifactId>freehep-graphicsio-pdf</artifactId>
                                <library>true</library>
                            </inclusion>
                            <inclusion>
                                <groupId>org.freehep</groupId>
                                <artifactId>freehep-graphicsbase</artifactId>
                                <library>true</library>
                            </inclusion>
                            <inclusion>
                                <groupId>org.freehep</groupId>
                                <artifactId>freehep-graphicsio</artifactId>
                                <library>true</library>
                            </inclusion>
                            <inclusion>
                                <groupId>org.freehep</groupId>
                                <artifactId>freehep-graphicsio-tests</artifactId>
                                <library>true</library>
                            </inclusion>
                            <inclusion>
                                <groupId>org.freehep</groupId>
                                <artifactId>freehep-io</artifactId>
                                <library>true</library>
                            </inclusion>

                            <inclusion>
                                <groupId>org.eclipse.persistence</groupId>
                                <artifactId>org.eclipse.persistence.moxy</artifactId>
                                <library>true</library>
                                <!--<filter>META-INF/ECLIPSE_.RSA,META-INF/ECLIPSE_.SF</filter> NEFUNGUJE!!!-->
                            </inclusion>
                            <inclusion>
                                <groupId>org.eclipse.persistence</groupId>
                                <artifactId>org.eclipse.persistence.antlr</artifactId>
                                <library>true</library>
                                <!--<filter>META-INF/ECLIPSE_.RSA,META-INF/ECLIPSE_.SF</filter> NEFUNGUJE!!!-->
                            </inclusion>
                            <inclusion>
                                <groupId>org.eclipse.persistence</groupId>
                                <artifactId>org.eclipse.persistence.asm</artifactId>
                                <library>true</library>
                                <!--<filter>META-INF/ECLIPSE_.RSA,META-INF/ECLIPSE_.SF</filter> NEFUNGUJE!!!-->
                            </inclusion>
                            <inclusion>
                                <groupId>org.eclipse.persistence</groupId>
                                <artifactId>org.eclipse.persistence.core</artifactId>
                                <library>true</library>
                                <!--<filter>META-INF/ECLIPSE_.RSA,META-INF/ECLIPSE_.SF</filter> NEFUNGUJE!!!-->
                            </inclusion>
                        </inclusions>
                    </assembly>
                    <!--                    <options>
                        <option>-keep class org.freehep.** {*** *(...);}</option>
                    </options>-->
                    <!--                    <inFilter>!main/java/cz/miroslavbartyzal/psdiagram/app/diagram/changelog.txt</inFilter>-->
                    <injar>${project.build.finalName}.jar</injar>
                    <outjar>${project.build.finalName}-obfuscated-with_dependencies.jar</outjar>
                    <outputDirectory>${project.build.directory}</outputDirectory>
                    <proguardInclude>${basedir}/proguard.conf</proguardInclude>
                    <!--                    <libs>
                        <lib>c:\Users\Miroslav\.m2\repository\junit\junit\4.11\junit-4.11.jar</lib>
                    </libs>-->
                </configuration>
            </plugin>

            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-antrun-plugin</artifactId>
                <version>1.7</version>
                <executions>
                    <execution>
                        <phase>package</phase>
                        <configuration>
                            <target name="delete-signature">
                                <jar destfile="${project.build.directory}/${project.build.finalName}-obfuscated-with_dependencies_UNSIGNED.jar" filesetmanifest="merge">
                                    <zipfileset src="${project.build.directory}/${project.build.finalName}-obfuscated-with_dependencies.jar" excludes="META-INF/*.DSA,META-INF/*.RSA,META-INF/*.SF" />
                                </jar>
                            </target>
                        </configuration>
                        <goals>
                            <goal>run</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>

        </plugins>
    </build>
</project>
